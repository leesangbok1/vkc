# Next.js 15 + Supabase Production Configuration
# Replace the values below with your actual Supabase project credentials

# Production Mode (disable mock mode)
NEXT_PUBLIC_MOCK_MODE=false

# Supabase Configuration (REPLACE WITH YOUR ACTUAL VALUES)
# Get these from: https://supabase.com/dashboard/project/[your-project]/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://[YOUR-PROJECT-ID].supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=[YOUR-ANON-KEY-HERE]
SUPABASE_SERVICE_ROLE_KEY=[YOUR-SERVICE-ROLE-KEY-HERE]

# Database Configuration (REPLACE WITH YOUR ACTUAL VALUES)
# Get this from: https://supabase.com/dashboard/project/[your-project]/settings/database
DATABASE_URL=postgresql://postgres:[YOUR-DB-PASSWORD]@db.[YOUR-PROJECT-ID].supabase.co:5432/postgres

# OAuth Providers (configure in Supabase Dashboard)
# Google OAuth: Configure at https://console.cloud.google.com/
# Kakao OAuth: Configure at https://developers.kakao.com/
# Note: OAuth secrets are configured in Supabase Dashboard, not here

# App Configuration
VITE_APP_URL=http://localhost:3000
VITE_APP_NAME=Viet K-Connect
VITE_APP_VERSION=1.0.0
VITE_DEV_MODE=false

# Production Mode (use real services)
VITE_DISABLE_FIREBASE=true
VITE_DISABLE_SUPABASE=false
VITE_MOCK_MODE=false

# OpenAI Configuration (for AI features - optional)
VITE_OPENAI_API_KEY=sk-your-openai-api-key-here

# Database Configuration (same as above, for legacy compatibility)
VITE_DATABASE_URL=postgresql://postgres:[YOUR-DB-PASSWORD]@db.[YOUR-PROJECT-ID].supabase.co:5432/postgres