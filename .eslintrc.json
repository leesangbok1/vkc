{
  "extends": [
    "next/core-web-vitals",
    "next/typescript"
  ],
  "rules": {
    "@next/next/no-img-element": "warn",
    "@next/next/no-html-link-for-pages": "warn",
    "no-unused-vars": "warn",
    "prefer-const": "warn",
    "no-console": "off"
  },
  "overrides": [
    {
      "files": ["**/*.test.{js,ts,jsx,tsx}", "**/*.spec.{js,ts,jsx,tsx}"],
      "env": {
        "jest": true
      },
      "globals": {
        "describe": "readonly",
        "it": "readonly",
        "expect": "readonly",
        "vi": "readonly",
        "beforeEach": "readonly",
        "afterEach": "readonly"
      }
    }
  ]
}